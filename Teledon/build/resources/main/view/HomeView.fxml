<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.HomeController">
    <children>
        <BorderPane prefHeight="401.0" prefWidth="600.0" style="-fx-background-color: #312f2f;">
            <top>
                <AnchorPane prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #312f2f; -fx-border-color: #84dccf;" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="usernameLabel" layoutX="438.0" layoutY="16.0" text="Name" textAlignment="CENTER" textFill="#84dccf">
                            <font>
                                <Font name="Book Antiqua Bold" size="14.0" />
                            </font>
                        </Label>
                  <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="405.0" layoutY="15.0">
                     <image>
                        <Image url="@../drawable/profileUser.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="566.0" layoutY="15.0" onMouseClicked="#switchToLoginPage">
                     <image>
                        <Image url="@../drawable/logoutIcon.png" />
                     </image>
                  </ImageView>
                  <Label layoutX="274.0" layoutY="12.0" text="Cases" textFill="#c7c7c7">
                     <font>
                        <Font name="Book Antiqua Bold" size="20.0" />
                     </font>
                  </Label>
                    </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
                </AnchorPane>
            </top>
            <center>
                <AnchorPane prefHeight="200.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                    <children>
                        <ListView fx:id="casesListView" layoutY="14.0" onMouseClicked="#handleSelection" prefHeight="276.0" prefWidth="600.0" style="-fx-background-color: #312f2f;" />
                        <Button fx:id="newDonationButton" layoutX="234.0" layoutY="303.0" mnemonicParsing="false" onAction="#switchToDonation" prefHeight="33.0" prefWidth="131.0" style="-fx-background-color: #84dccf; -fx-background-radius: 45;" text="New Donation" textAlignment="CENTER" textFill="#312f2f">
                            <font>
                                <Font name="Book Antiqua" size="16.0" />
                            </font>
                        </Button>
                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>

</AnchorPane>
